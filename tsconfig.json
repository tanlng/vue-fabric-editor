{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "build",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "files": [],
  "include": [
    "packages/**/*.ts",
    "packages/src/**/*.d.ts",
    "packages/src/**/*.tsx",
    "packages//**/*.vue",
    "typings/**/*.ts",
    "typings/**/*.d.ts",
    "packages/src/hooks/useMaterial.js",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}