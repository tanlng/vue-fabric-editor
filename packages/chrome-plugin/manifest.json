{
  "manifest_version": 3,
  "name": "Image Editor",
  "description": "Image Editor",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon-128.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["content/content.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "scripting",
    "alarms",
    "storage",
    "tabs",
    "tabGroups",

    "contextMenus",
    "notifications",
    "webRequest",
    "webNavigation",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],
  "minimum_chrome_version": "102",
  "omnibox": {
    "keyword": "api"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
